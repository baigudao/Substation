<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_right_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="20dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/main_right_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_icon" />

    <ImageView

        android:id="@+id/main_right_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_right_btn2"
        android:layout_marginTop="57dp"
        android:background="@drawable/history_icon" />

    <ImageView
        android:id="@+id/main_right_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_right_btn3"
        android:layout_marginTop="57dp"
        android:background="@drawable/setting_icon" />

</RelativeLayout>