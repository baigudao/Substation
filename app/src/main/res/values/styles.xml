<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_button_blue_theme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Welcome">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/welcome_back</item>
    </style>

    <style name="setting_radio_button">
        <item name="android:button">@drawable/setting_radio_button_selector</item>
    </style>

    <style name="EditTextWhite" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white_fff</item>
        <item name="colorControlActivated">@color/white_fff</item>
    </style>

</resources>
